<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@android:color/transparent">

    <RelativeLayout
        android:id="@+id/ll_viewmode_close"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:gravity="center"
        android:background="@drawable/shape_rec_round_2corner_white_grey">
        <ImageButton
            android:id="@+id/ib_viewmode_close"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:background="@mipmap/icon_close"/>
    </RelativeLayout>

    <TextView
        android:layout_width="35dp"
        android:layout_height="1dp"
        android:background="#eeeeee"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/shape_rec_round_3corner_white_grey"
        android:padding="15dp"
        android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:orientation="horizontal">

        <RelativeLayout
            android:id="@+id/rl_viewmode_common"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="1dp"
                android:background="@mipmap/pic_pop_viewmode_common"/>

            <ImageView
                android:id="@+id/iv_viewmode_common"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/shape_rec_round_transparent_grey"/>

            <TextView
                android:id="@+id/tv_viewmode_common"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_alignParentBottom="true"
                android:text="普通模式"
                android:layout_margin="1dp"
                android:gravity="center"
                android:textColor="@color/white"
                android:background="@color/transparent_5"/>
        </RelativeLayout>

        <TextView
            android:layout_width="0dp"
            android:layout_weight="0.1"
            android:layout_height="match_parent" />

        <RelativeLayout
            android:id="@+id/rl_viewmode_satellite"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="1dp"
                android:background="@mipmap/pic_pop_viewmode_satellite"/>

            <ImageView
                android:id="@+id/iv_viewmode_satellite"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/shape_rec_round_transparent_grey"/>

            <TextView
                android:id="@+id/tv_viewmode_satellite"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_alignParentBottom="true"
                android:text="卫星地图"
                android:gravity="center"
                android:layout_margin="1dp"
                android:textColor="@color/white"
                android:background="@color/transparent_5"/>
        </RelativeLayout>

        <TextView
            android:layout_width="0dp"
            android:layout_weight="0.1"
            android:layout_height="match_parent" />

        <RelativeLayout
            android:id="@+id/rl_viewmode_night"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="1dp"
                android:background="@mipmap/pic_pop_viewmode_night"/>

            <ImageView
                android:id="@+id/iv_viewmode_night"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/shape_rec_round_transparent_grey"/>

            <TextView
                android:id="@+id/tv_viewmode_night"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_alignParentBottom="true"
                android:text="夜间地图"
                android:gravity="center"
                android:layout_margin="1dp"
                android:textColor="@color/white"
                android:background="@color/transparent_5"/>
        </RelativeLayout>

    </LinearLayout>


    <LinearLayout
        android:layout_marginTop="15dp"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:orientation="horizontal">
        <RelativeLayout
            android:id="@+id/rl_viewmode_navigation"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="1dp"
                android:background="@mipmap/pic_pop_viewmode_navigation"/>

            <ImageView
                android:id="@+id/iv_viewmode_navigation"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/shape_rec_round_transparent_grey"/>

            <TextView
                android:id="@+id/tv_viewmode_navigation"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_alignParentBottom="true"
                android:text="导航模式"
                android:layout_margin="1dp"
                android:gravity="center"
                android:textColor="@color/white"
                android:background="@color/transparent_5"/>
        </RelativeLayout>

        <TextView
            android:layout_width="0dp"
            android:layout_weight="2.2"
            android:layout_height="match_parent" />
    </LinearLayout>

    </LinearLayout>


</LinearLayout>